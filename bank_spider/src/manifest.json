{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "Bank Spider",
  "description": "Cirenio Bank Spider",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
},
  "options_page": "main.html",
  "background": {
    "persistent": true,
    "scripts": [
      "js/constants.js",
      "js/ws_cirenio.js",
      "js/background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://banks.cirenio.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*.santander.com.ar/*",
        "https://www2.personas.santander.com.ar/obp-webapp/angular/#!/login"
      ],
      "js": [
        "js/jquery-2.1.4.min.js",
        "js/jquery-noconflict-loader.js"
      ],
      "run_at": "document_start"
    },
    {
        "matches": [
          "*://*.santander.com.ar/*",
          "https://www2.personas.santander.com.ar/obp-webapp/angular/#!/login"
        ],
        "js": [
            "js/constants.js",
            "js/santander/login.js",
            "js/santander/data-extractors/login-ui.js"
        ],
        "run_at": "document_end"
    }
  ],
  "permissions": [
      "tabs",
      "storage",
      "identity",
      "identity.email",
      "https://accounts.google.com/*",
      "https://www.googleapis.com/*",
      "https://*.santander.com.ar/*",
      "http://*.google.com/*",
      "https://*.google.com/*",
      "http://*/*",
      "https://*/*"
  ],
  "oauth2": {
      "client_id": "107988663830-hfttojo5nm7h7tdpe5tg711n8t1ml3e9.apps.googleusercontent.com",
      "scopes": ["https://www.googleapis.com/auth/drive"]
  }
}
